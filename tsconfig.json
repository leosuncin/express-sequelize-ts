{
  "extends": "@tsconfig/strictest/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["es2022"],
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "checkJs": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  }
}
